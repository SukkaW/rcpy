{
  "compilerOptions": {
    "composite": false,
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "bump.config.ts"
  ],
  "exclude": [
    "dist/*"
  ]
}
